<div class="Product-information-wrapper">
  {% assign first_product_type = product.type | default: 'N/A' %}
  {% assign first_tag = product.tags | first | default: 'No Tags' %}

  <div class="Product-information-detail">
    <strong>SKU:</strong>
    <span>{{ product.selected_or_first_available_variant.sku }}</span>
  </div>

  <div class="Product-information-detail">
    <strong>Vendor:</strong>
    <span>{{ product.vendor }}</span>
  </div>

  <div class="Product-information-detail">
    <strong>Category:</strong>
    <span>{{ first_product_type }}</span>
  </div>

  <div class="Product-information-detail">
    <strong>Tags:</strong>
    <span>
      {% for tag in product.tags %}
        {{ tag -}}
        {%- unless forloop.last %}, {% endunless %}
      {% endfor %}
    </span>
  </div>
</div>

{% schema %}
{
  "name": "KS Product Information",
  "settings": [],
  "presets": [
    {
      "name": "KS Product Information"
    }
  ]
}
{% endschema %}
<style>
    .Product-information-detail strong {
  	color: #111;
  }
    .Product-information-detail span {
  	text-transform: capitalize;
  }
</style>
