{% schema %}
{
  "name": "Custom Feature Section",
  "tag": "section",
  "class": "custom-feature-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover Our Features"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Highlight the key benefits of your products or brand here."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Feature Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
.custom-feature-section {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  gap: 40px;
}

.custom-feature-section .content {
  flex: 1;
  min-width: 300px;
}

.custom-feature-section .content h2 {
  font-size: 32px;
  margin-bottom: 20px;
}

.custom-feature-section .content p {
  font-size: 18px;
  line-height: 1.6;
  margin-bottom: 25px;
}

.custom-feature-section .content a {
  display: inline-block;
  padding: 12px 24px;
  background-color: #000;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
  transition: background 0.3s ease;
}

.custom-feature-section .content a:hover {
  background-color: #333;
}

.custom-feature-section .image {
  flex: 1;
  min-width: 300px;
}

.custom-feature-section .image img {
  width: 100%;
  height: auto;
  border-radius: 10px;
}

.custom-feature-section.right .image {
  order: 2;
}

.custom-feature-section.right .content {
  order: 1;
}
{% endstyle %}

<div class="custom-feature-section {% if section.settings.image_position == 'right' %}right{% endif %}">
  <div class="image">
    {% if section.settings.image %}
      <img src="{{ section.settings.image | image_url: width: 800 }}" alt="Feature Image" loading="lazy">
    {% endif %}
  </div>
  <div class="content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.text }}</p>
    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</div>
