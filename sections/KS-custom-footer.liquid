<div class="custom-footer-wrapper">
  <div class="page-width2">
    <div class="custom-footer-inner">
      <!-- Store Information -->
      <div class="footer-column">
        <h4>Store Information</h4>
        <ul class="footer-info">
          <li>
            <i class="fa-solid fa-location-dot"></i>
            {{ section.settings.store_name }}<br>
            {{ section.settings.store_address }}<br>
            {{ section.settings.store_location }}
          </li>
          <li>
            <i class="fa-regular fa-envelope"></i>
            <a class="mail" href="mailto:{{ section.settings.store_email }}">{{ section.settings.store_email }}</a>
          </li>
          <li>
            <i class="fa-solid fa-phone"></i>
            <a class="tel" href="tel:{{ section.settings.store_phone | remove: ' ' | remove: '-' }}">{{ section.settings.store_phone }}</a>
          </li>
        </ul>
      </div>

      <!-- Quick Links -->
      <div class="footer-column">
        <h4>Quick Links</h4>
        <ul>
          {% for link in linklists[section.settings.quick_links].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Find Product -->
      <div class="footer-column">
        <h4>Find Product</h4>
        <ul>
          {% for link in linklists[section.settings.find_product_links].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Your Account -->
      <div class="footer-column">
        <h4>Your Account</h4>
        <ul>
          {% for link in linklists[section.settings.account_links].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="page-width2 footer-bottom-inner">
      <!-- Social Icons -->
      <div class="footer-social">
        {% if section.settings.facebook_link != blank %}
          <a href="{{ section.settings.facebook_link }}" target="_blank" class="social-icon">
            <i class="fa-brands fa-facebook-f"></i>
          </a>
        {% endif %}
        {% if section.settings.instagram_link != blank %}
          <a href="{{ section.settings.instagram_link }}" target="_blank" class="social-icon">
            <i class="fa-brands fa-instagram"></i>
          </a>
        {% endif %}
        {% if section.settings.youtube_link != blank %}
          <a href="{{ section.settings.youtube_link }}" target="_blank" class="social-icon">
            <i class="fa-brands fa-youtube"></i>
          </a>
        {% endif %}
        {% if section.settings.tiktok_link != blank %}
          <a href="{{ section.settings.tiktok_link }}" target="_blank" class="social-icon">
            <i class="fa-brands fa-tiktok"></i>
          </a>
        {% endif %}
        {% if section.settings.close_link != blank %}
          <a href="{{ section.settings.close_link }}" target="_blank" class="social-icon">
            <i class="fa-solid fa-xmark"></i>
          </a>
        {% endif %}
      </div>

      <!-- Copyright -->
      <div class="footer-copyright">
        Â© {{ 'now' | date: '%Y' }}, {{ section.settings.footer_text }} Powered by Shopify
      </div>

      <!-- Payment Icons -->
      <div class="footer-payments">
        {% for type in shop.enabled_payment_types %}
          <span class="payment-icon">
            {{ type | payment_type_svg_tag }}
          </span>
        {% endfor %}
      </div>
    </div>
  </div>
</div>


