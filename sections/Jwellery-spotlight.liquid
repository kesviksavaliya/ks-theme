<div class="jwellery-spotlight-wrapper">
  <div class="page-width">
    <div class="jwellery-spotlight-inner">
      {% for block in section.blocks %}
        <div class="spotlight-info">
          <img
            loading="lazy"
            src="{{ block.settings.image | img_url: 'master' }}"
            alt="{{ block.settings.heading | escape }}"
          >
          <div class="spotlight-inner-text">
            <p class="offer">{{ block.settings.offer_discount }}</p>
            <h2>{{ block.settings.heading }}</h2>
            <a href="{{ block.settings.url }}">{{ block.settings.url_text }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
          .jwellery-spotlight-inner {
        	display: flex;
        	gap: 23px;
        }
          .jwellery-spotlight-inner .spotlight-info {
        	position: relative;
        	width: 33.33%;
            overflow: hidden;
        }
          .jwellery-spotlight-inner .spotlight-info .spotlight-inner-text {
        	position: absolute;
        	top: 50%;
        	transform: translateY(-50%);
        	left: 35px;
            width: 50%;
        }
        .jwellery-spotlight-inner .spotlight-info .spotlight-inner-text .offer {
    	margin: 0;
    	display: inline;
    	background-color: #c19417;
    	color: #fff;
    	font-size: 14px;
    	padding: 2px 10px;
    	text-transform: uppercase;
    }
    .jwellery-spotlight-inner .spotlight-info:hover img,
  .jwellery-spotlight-inner .spotlight-info:focus-within img {
    transform: scale(1.08);
  }
        .jwellery-spotlight-inner .spotlight-info .spotlight-inner-text h2 {
        	margin: 20px 0;
        	font-size: 30px;
        }
        .jwellery-spotlight-inner .spotlight-info .spotlight-inner-text a {
      	text-decoration: underline;
      	text-transform: uppercase;
      	font-weight: 600;
          transition: all 0.3s;
      }
  .jwellery-spotlight-inner .spotlight-info .spotlight-inner-text a:hover{
    text-decoration: none;
  }
      .jwellery-spotlight-inner .spotlight-info img {
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
      transition: transform 1s ease;
    }
{% endstylesheet %}

{% schema %}
{
  "name": "KS Jwellery Spotlight",
  "blocks": [
    {
      "type": "jwellery_spotlight_block",
      "name": "Jwellery Spotlight Block",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image",
        },
        {
          "type": "textarea",
          "label": "offer Discount",
          "id": "offer_discount",
          "default": "Upto 10% off",
          "placeholder": "Enter Offer Discount"
        },
        {
          "type": "text",
          "label": "Heading",
          "id": "heading",
          "default": "Heading Here",
          "placeholder": "Enter Heading"
        },
        {
          "type": "url",
          "label": "URL",
          "id": "url"
        },
        {
          "type": "text",
          "label": "URL Text",
          "id": "url_text",
          "default": "URL Text",
          "placeholder": "Enter URL Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "KS Jwellery Spotlight Section"
    }
  ]
}
{% endschema %}
