<!-- sections/google-map.liquid -->
<div class="google-map-section" style="padding: 40px 0;">
  <div class="page-width2">
    {% if section.settings.heading != blank %}
      <h2 style="text-align:center; margin-bottom: 20px;">{{ section.settings.heading }}</h2>
    {% endif %}

    <div style="width: 100%; height: 450px;">
      <iframe
        src="{{ section.settings.map_iframe }}"
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      >
      </iframe>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Google Map Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find Us on the Map"
    },
    {
      "type": "textarea",
      "id": "map_iframe",
      "label": "Google Map Embed (iframe code)",
      "default": "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.0861553366937!2d-122.4039630244389!3d37.78695687197406!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80858064e39f77b3%3A0x4357dcb47aa41d08!2s33%20New%20Montgomery%20St%2C%20San%20Francisco%2C%20CA%2094105%2C%20USA!5e0!3m2!1sen!2sin!4v1659599919845!5m2!1sen!2sin"
    }
  ],
  "presets": [
    {
      "name": "Google Map Section"
    }
  ]
}
{% endschema %}
