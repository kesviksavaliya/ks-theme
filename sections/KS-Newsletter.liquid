<!-- custom-newsletter.liquid -->

<section class="custom-newsletter">
  <div class="page-width">
    <div class="newsletter-inner">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtext }}</p>

      <form
        method="post"
        action="{{ routes.root_url }}contact#contact_form"
        accept-charset="UTF-8"
        class="newsletter-form"
        id="newsletter_form"
      >
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="âœ“">
        <input type="email" name="contact[email]" placeholder="Email" required>
        <button type="submit">{{ section.settings.button_text }}</button>
      </form>
    </div>
  </div>
</section>

<style>
  .custom-newsletter {
    padding: 60px 20px;
    text-align: center;
    background-color: #ffffff;
  }

  .custom-newsletter h2 {
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 10px;
  }

  .custom-newsletter p {
    font-size: 16px;
    color: #666;
    margin-bottom: 30px;
  }

  .newsletter-form {
    display: flex;
    justify-content: center;
    max-width: 800px;
    margin: 0 auto;
    gap: 0;
  }

  .newsletter-form input[type="email"] {
    padding: 15px 20px;
    width: 100%;
    max-width: 800px;
    border: none;
    background-color: #f5f5f5;
    font-size: 14px;
    border-radius: 0;
    outline: none;
  }

  .newsletter-form button {
    padding: 15px 25px;
    background-color: #c49112;
    color: white;
    font-weight: bold;
    border: none;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .newsletter-form button:hover {
    background-color: #a5770e;
  }

  @media (max-width: 600px) {
    .newsletter-form {
      flex-direction: column;
    }

    .newsletter-form input[type="email"],
    .newsletter-form button {
      width: 100%;
      margin-bottom: 10px;
    }

    .newsletter-form button {
      margin-bottom: 0;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe To Our Newsletter"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subheading",
      "default": "Subscribe to our latest newsletter to get news about special discounts."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SUBSCRIBE"
    }
  ],
  "presets": [
    {
      "name": "Custom Newsletter",
      "category": "Email"
    }
  ]
}
{% endschema %}
